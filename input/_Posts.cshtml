
@foreach (var post in Model.GetChildren()) {
	var excerpt = post.GetString(Keys.Excerpt);
	excerpt = excerpt.RemoveStart("<p>").RemoveEnd("</p>");
	var words = excerpt.Split().Take(50);
	excerpt = string.Join(" ", words) + " [...]";


	<h1>@Html.DocumentLink(post)</h1>

	<nav class="meta">
		@await Html.PartialAsync("_Meta.cshtml", post)
	</nav>

	<article class="list">
		@Html.DocumentLink(post, excerpt)
	</article>

	<nav class="tags">
		@await Html.PartialAsync("_Tags.cshtml", post)
	</nav>
}
